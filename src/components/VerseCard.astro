---
interface Props {
  reference: string;
  text: string;
  audiences?: string[];
}

const { reference, text, audiences = ['all'] } = Astro.props;
---

<div class="verse-card card" data-audiences={audiences.join(',')}>
  <blockquote class="verse-text">
    "{text}"
  </blockquote>
  <cite class="verse-reference">â€” {reference}</cite>
  {audiences.length > 0 && !audiences.includes('all') && (
    <div class="verse-audiences">
      {audiences.map(aud => (
        <span class={`audience-tag audience-${aud}`}>
          {aud.replace('-', ' ')}
        </span>
      ))}
    </div>
  )}
</div>

<style>
  .verse-card {
    position: relative;
    padding-left: var(--space-6);
    border-left: 3px solid var(--color-accent);
  }

  .verse-card::before {
    content: '"';
    position: absolute;
    top: var(--space-2);
    left: var(--space-2);
    font-family: var(--font-heading);
    font-size: var(--text-4xl);
    color: var(--color-border);
    line-height: 1;
  }

  .verse-text {
    font-family: var(--font-verse);
    font-style: italic;
    font-size: var(--text-lg);
    line-height: 1.7;
    color: var(--color-text);
    margin: 0 0 var(--space-3) 0;
  }

  .verse-reference {
    display: block;
    font-family: var(--font-body);
    font-style: normal;
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-secondary);
  }

  .verse-audiences {
    margin-top: var(--space-3);
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }
</style>
