---
import books from '../data/books.json';

interface Props {
  currentSlug: string;
}

const { currentSlug } = Astro.props;

const currentIndex = books.findIndex(b => b.slug === currentSlug);
const prevBook = currentIndex > 0 ? books[currentIndex - 1] : null;
const nextBook = currentIndex < books.length - 1 ? books[currentIndex + 1] : null;
---

<nav class="book-navigation" aria-label="Book navigation">
  {prevBook ? (
    <a href={`/books/${prevBook.slug}`} class="nav-button prev">
      <svg width="20" height="20" viewBox="0 0 20 20" fill="none" stroke="currentColor" stroke-width="2">
        <polyline points="12,4 6,10 12,16"/>
      </svg>
      <span class="nav-label">
        <span class="nav-direction">Previous</span>
        <span class="nav-book">{prevBook.name}</span>
      </span>
    </a>
  ) : (
    <div class="nav-placeholder"></div>
  )}

  <a href="/" class="nav-home" title="All Books">
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
      <polyline points="9,22 9,12 15,12 15,22"/>
    </svg>
  </a>

  {nextBook ? (
    <a href={`/books/${nextBook.slug}`} class="nav-button next">
      <span class="nav-label">
        <span class="nav-direction">Next</span>
        <span class="nav-book">{nextBook.name}</span>
      </span>
      <svg width="20" height="20" viewBox="0 0 20 20" fill="none" stroke="currentColor" stroke-width="2">
        <polyline points="8,4 14,10 8,16"/>
      </svg>
    </a>
  ) : (
    <div class="nav-placeholder"></div>
  )}
</nav>

<style>
  .book-navigation {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--space-4);
    padding: var(--space-6) 0;
    border-top: 1px solid var(--color-border-light);
    margin-top: var(--space-8);
  }

  .nav-button {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-3) var(--space-4);
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    color: var(--color-text);
    text-decoration: none;
    transition: all var(--transition-fast);
    min-width: 140px;
  }

  .nav-button:hover {
    border-color: var(--color-accent);
    box-shadow: var(--shadow-md);
    text-decoration: none;
  }

  .nav-button.prev {
    justify-content: flex-start;
  }

  .nav-button.next {
    justify-content: flex-end;
    text-align: right;
  }

  .nav-label {
    display: flex;
    flex-direction: column;
  }

  .nav-direction {
    font-size: var(--text-xs);
    color: var(--color-text-light);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .nav-book {
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-text);
  }

  .nav-home {
    padding: var(--space-3);
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    color: var(--color-text-light);
    transition: all var(--transition-fast);
  }

  .nav-home:hover {
    border-color: var(--color-accent);
    color: var(--color-accent);
  }

  .nav-placeholder {
    min-width: 140px;
  }

  @media (max-width: 600px) {
    .nav-button {
      min-width: auto;
      padding: var(--space-2) var(--space-3);
    }

    .nav-label {
      display: none;
    }

    .nav-placeholder {
      min-width: auto;
      width: 44px;
    }
  }
</style>
